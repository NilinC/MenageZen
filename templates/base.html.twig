<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}MénageZen!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <nav class="navbar navbar-expand-lg bg-body-tertiary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('homepage') }}">MénageZen!</a>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('list_by_room', { 'roomFilter': 1 }) }}">Chambre</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('list_by_room', { 'roomFilter': 2 }) }}">Salon</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('list_by_room', { 'roomFilter': 3 }) }}#">Cuisine</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('list_by_room', { 'roomFilter': 4 }) }}">Entrée</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('list_by_room', { 'roomFilter': 5 }) }}">Salle de bains</a>
                            </li>
                        </ul>

                        <a class="btn btn-outline-success" type="button" href="{{ path('update_task') }}">Ajouter une tâche</a>
                    </div>
                </div>
            </nav>

            <div class="container">
                <div class="row justify-content-md-center">
                    <div class="col-md-auto">
                        {% block content %}{% endblock %}
                    </div>
                </div>
            </div>

        {% endblock %}

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>
